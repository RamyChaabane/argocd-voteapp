{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "regexManagers": [
    {
      "fileMatch": ["kustomize/dev/kustomization.yaml"],
      "matchStrings": [
        "name:\\s*(?<depName>\\S+)\\s*\\n\\s*newName:\\s*\\S+\\s*\\n\\s*newTag:\\s*(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],

  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-backend"],
      "addLabels": ["env:dev", "service:backend"]
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-frontend"],
      "addLabels": ["env:dev", "service:frontend"]
    }
  ]
}
