{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:base"
  ],
  "packageRules": [
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-backend"],
      "matchPaths": ["kustomize/dev/**"],
      "labels": ["env:dev", "service:backend"],
      "separateMinorPatch": true
    },
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-frontend"],
      "matchPaths": ["kustomize/dev/**"],
      "labels": ["env:dev", "service:frontend"],
      "separateMinorPatch": true
    },
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-backend"],
      "matchPaths": ["kustomize/staging/**"],
      "labels": ["env:staging", "service:backend"],
      "separateMinorPatch": true
    },
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-frontend"],
      "matchPaths": ["kustomize/staging/**"],
      "labels": ["env:staging", "service:frontend"],
      "separateMinorPatch": true
    },
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-backend"],
      "matchPaths": ["kustomize/prod/**"],
      "labels": ["env:prod", "service:backend"],
      "separateMinorPatch": true
    },
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/vote-frontend"],
      "matchPaths": ["kustomize/prod/**"],
      "labels": ["env:prod", "service:frontend"],
      "separateMinorPatch": true
    }
  ],
  "kustomize": {
    "fileMatch": ["kustomization.yaml", "kustomization.yml"]
  }
}
