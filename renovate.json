{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:base"
  ],
  "enabledManagers": ["regex"],
  "regexManagers": [
    {
      "fileMatch": ["kustomize/dev/kustomization\\.ya?ml$"],
      "matchStrings": [
        "newName:\\s*(?<depName>ramydockerid/vote-[^\\s]+)[\\s\\S]*?newTag:\\s*(?<currentValue>[\\w.\\-]+)"
      ],
      "datasourceTemplate": "docker",
      "labels": ["env:dev"]
    },
    {
      "fileMatch": ["kustomize/staging/kustomization\\.ya?ml$"],
      "matchStrings": [
        "newName:\\s*(?<depName>ramydockerid/vote-[^\\s]+)[\\s\\S]*?newTag:\\s*(?<currentValue>[\\w.\\-]+)"
      ],
      "datasourceTemplate": "docker",
      "labels": ["env:staging"]
    },
    {
      "fileMatch": ["kustomize/prod/kustomization\\.ya?ml$"],
      "matchStrings": [
        "newName:\\s*(?<depName>ramydockerid/vote-[^\\s]+)[\\s\\S]*?newTag:\\s*(?<currentValue>[\\w.\\-]+)"
      ],
      "datasourceTemplate": "docker",
      "labels": ["env:prod"]
    }
  ]
}
