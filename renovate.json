{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:base"
  ],
  "packageRules": [
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ramydockerid/vote-backend",
        "ramydockerid/vote-frontend"
      ],
      "enabled": true,
      "extractVersion": "newTag",
      "depTypeList": ["runtime"]
    },
    {
      "matchPaths": ["kustomize/dev/.*"],
      "labels": ["env:dev"]
    },
    {
      "matchPaths": ["kustomize/staging/.*"],
      "labels": ["env:staging"]
    },
    {
      "matchPaths": ["kustomize/prod/.*"],
      "labels": ["env:prod"]
    }
  ],

  "kustomize": {
    "fileMatch": ["kustomization.yaml", "kustomization.yml"]
  }
}
