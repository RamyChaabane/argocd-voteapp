{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "packageRules": [
    {
      "managers": ["kustomize"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ramydockerid/**"],
      "matchFileNames": ["kustomize/dev/**"],
      "addLabels": ["env:dev"],
      "enabled": true,
      "extractVersion": "newTag",
      "depTypeList": ["runtime"],
    }
  ],
  "kustomize": {
    "fileMatch": ["kustomization.yaml", "kustomization.yml"],
  }
}
